  <section class="space-y-8">
    <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
      <div class="rounded-md bg-stone-900/70 p-4 shadow-sm shadow-black/40">
        <p class="text-xs font-semibold uppercase tracking-wide text-stone-400">Packages</p>
        <p class="mt-2 text-2xl font-semibold text-stone-100"><%= summary.packageCount %></p>
        <p class="text-xs text-stone-500">Modules discovered across the workspace</p>
      </div>
      <div class="rounded-md bg-stone-900/70 p-4 shadow-sm shadow-black/40">
        <p class="text-xs font-semibold uppercase tracking-wide text-stone-400">Direct Dependencies</p>
        <p class="mt-2 text-2xl font-semibold text-stone-100"><%= summary.dependencyCount %></p>
        <p class="text-xs text-stone-500">Cross-package relationships detected</p>
      </div>
      <div class="rounded-md bg-stone-900/65 p-4 shadow-sm shadow-black/40">
        <p class="text-xs font-semibold uppercase tracking-wide text-stone-400">Cyclic Links</p>
        <p class="mt-2 text-2xl font-semibold text-stone-200"><%= summary.cyclicDependencyCount %></p>
        <p class="text-xs text-stone-500">Teams to review for potential refactors</p>
      </div>
      <div class="rounded-md bg-stone-900/65 p-4 shadow-sm shadow-black/40">
        <p class="text-xs font-semibold uppercase tracking-wide text-stone-400">Undeclared Usage</p>
        <p class="mt-2 text-2xl font-semibold text-stone-200"><%= summary.undeclaredDependencyCount %></p>
        <p class="text-xs text-stone-500">Dependencies missing from package manifests</p>
      </div>
    </div>
    <div class="grid gap-4 md:grid-cols-2">
      <div class="rounded-md bg-stone-900/70 p-5 shadow-sm shadow-black/40">
        <h2 class="text-sm font-semibold uppercase tracking-wide text-stone-400">Workspace</h2>
        <dl class="mt-3 space-y-2 text-sm text-stone-300">
          <div class="flex flex-col">
            <dt class="text-xs uppercase tracking-wide text-stone-500">Root Directory</dt>
            <dd class="font-mono text-xs text-stone-300"><%= reportData.rootDir %></dd>
          </div>
          <div class="flex flex-col">
            <dt class="text-xs uppercase tracking-wide text-stone-500">Average Dependencies</dt>
            <dd class="font-medium text-stone-100"><%= summary.averageDependencyCount %> per package</dd>
          </div>
        </dl>
      </div>
      <div class="rounded-md bg-stone-900/70 p-5 shadow-sm shadow-black/40">
        <h2 class="text-sm font-semibold uppercase tracking-wide text-stone-400">Environment</h2>
        <dl class="mt-3 space-y-2 text-sm text-stone-300">
          <div class="flex items-center justify-between gap-4">
            <dt class="text-xs uppercase tracking-wide text-stone-500">Generated</dt>
            <dd class="font-medium text-stone-100"><%= now %></dd>
          </div>
          <div class="flex items-center justify-between gap-4">
            <dt class="text-xs uppercase tracking-wide text-stone-500">Node Version</dt>
            <dd class="font-medium text-stone-100"><%= nodeVersion %></dd>
          </div>
          <div class="flex items-center justify-between gap-4">
            <dt class="text-xs uppercase tracking-wide text-stone-500">System</dt>
            <dd class="font-medium text-stone-100"><%= systemInfo %></dd>
          </div>
        </dl>
      </div>
    </div>
  </section>
