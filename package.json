{
  "name": "mono-deps-report",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "dep-graph": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && cp -R templates dist/templates",
    "start": "tsx src/index.ts",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "ejs": "^3.1.9",
    "fast-glob": "^3.3.3",
    "ora": "^9.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/ejs": "^3.1.5",
    "@vitest/coverage-v8": "^4.0.3",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "ts-morph": "^27.0.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.3"
  }
}
