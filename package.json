{
  "name": "retracify",
  "version": "0.3.0",
  "description": "Generate interactive dependency reports for workspaces and standalone projects.",
  "keywords": [
    "dependencies",
    "dependency-graph",
    "monorepo",
    "codebase-insights",
    "cli"
  ],
  "license": "MIT",
  "type": "module",
  "bin": {
    "retracify": "./dist/index.js"
  },
  "scripts": {
    "build": "bunx tsc -p tsconfig.build.json",
    "start": "bun src/index.ts",
    "lint": "bunx eslint src",
    "lint:fix": "bunx eslint src --fix",
    "format": "bunx prettier --write \"src/**/*.ts\"",
    "format:check": "bunx prettier --check \"src/**/*.ts\"",
    "test": "bun run test:unit && bun run test:e2e",
    "test:unit": "bun test test/utils.test.ts test/index.test.ts test/graph.test.ts",
    "test:e2e": "bun test test/report-output.test.ts test/report.e2e.test.ts test/graph.integration.test.ts",
    "test:watch": "bun --watch test",
    "test:coverage": "bun test --coverage",
    "prepublishOnly": "bun run test && bun run build",
    "release:patch": "npm version patch",
    "release:minor": "npm version minor",
    "release:major": "npm version major",
    "publish:package": "npm publish --access public"
  },
  "files": [
    "dist",
    "templates"
  ],
  "dependencies": {
    "chalk": "^5.3.0",
    "ejs": "^3.1.9",
    "fast-glob": "^3.3.3",
    "open": "^9.1.0",
    "ora": "^9.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/ejs": "^3.1.5",
    "@types/node": "^24.9.1",
    "bun-types": "^1.3.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "1.0.0"
  }
}
